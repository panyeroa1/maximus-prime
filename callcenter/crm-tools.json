{
  "tools": [
    {
      "name": "Create CRM Record",
      "description": "Create a new customer record in the CRM with contact details, issue summary, and priority so live agents can follow up.",
      "speech": "Let me log this in our CRM for you.",
      "url": "https://crm.example.com/api/v1/records",
      "method": "POST",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {{crm_api_token}}"
      },
      "body": {
        "customer_name": "{{input.customer_name}}",
        "email": "{{input.email}}",
        "phone": "{{phone_number}}",
        "issue_summary": "{{input.issue_summary}}",
        "priority": "{{input.priority}}",
        "source_call_id": "{{call_id}}",
        "notes": "{{input.notes}}"
      },
      "input_schema": {
        "type": "object",
        "required": [
          "customer_name",
          "issue_summary",
          "priority"
        ],
        "properties": {
          "customer_name": "Full name of the caller.",
          "email": "Customer email address, if provided.",
          "issue_summary": "Short description of the caller request or concern.",
          "priority": "Ticket urgency: low, medium, or high.",
          "notes": "Optional extra context or promises made."
        },
        "example": {
          "customer_name": "Sam Millett",
          "email": "sam.millett@example.com",
          "issue_summary": "Flight TK1500 was cancelled; customer needs same-day rebooking.",
          "priority": "high",
          "notes": "Prefers evening departures; confirmation email requested."
        }
      },
      "response": {
        "record_id": "$.data.id",
        "ticket_status": "$.data.status"
      },
      "timeout": 15000,
      "model": "base",
      "language": "en-US",
      "wait_for_greeting": "false",
      "temperature": "0.7",
      "interruption_threshold": 100,
      "timezone": "America/Los_Angeles",
      "max_duration": "30",
      "noise_cancellation": "false",
      "block_interruptions": "false",
      "record": "false",
      "keywords": [
        "create ticket",
        "log issue",
        "record customer"
      ],
      "ignore_button_press": "false"
    },
    {
      "name": "Lookup CRM Record",
      "description": "Retrieve an existing CRM record using the record ID or customer email so the agent can review prior interactions.",
      "speech": "Let me pull up your existing record.",
      "url": "https://crm.example.com/api/v1/records",
      "method": "GET",
      "headers": {
        "Authorization": "Bearer {{crm_api_token}}"
      },
      "query": {
        "record_id": "{{input.record_id}}",
        "email": "{{input.email}}"
      },
      "input_schema": {
        "type": "object",
        "description": "Provide either record_id or email to search.",
        "anyOf": [
          {
            "required": [
              "record_id"
            ]
          },
          {
            "required": [
              "email"
            ]
          }
        ],
        "properties": {
          "record_id": "CRM record identifier, e.g. REC-12345.",
          "email": "Customer email address."
        },
        "example": {
          "record_id": "REC-458291"
        }
      },
      "response": {
        "record": "$.data"
      },
      "timeout": 15000,
      "model": "base",
      "language": "en-US",
      "wait_for_greeting": "false",
      "temperature": "0.3",
      "interruption_threshold": 100,
      "timezone": "America/Los_Angeles",
      "max_duration": "30",
      "noise_cancellation": "false",
      "block_interruptions": "false",
      "record": "false",
      "keywords": [
        "lookup record",
        "find customer",
        "retrieve ticket"
      ],
      "ignore_button_press": "false"
    },
    {
      "name": "Update CRM Record",
      "description": "Update an existing CRM record with new status, assignments, or notes gathered during the call.",
      "speech": "I will update your record with those details.",
      "url": "https://crm.example.com/api/v1/records/{{input.record_id}}",
      "method": "POST",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {{crm_api_token}}"
      },
      "body": {
        "status": "{{input.status}}",
        "assigned_to": "{{input.assigned_to}}",
        "priority": "{{input.priority}}",
        "notes": "{{input.notes}}",
        "callback_required": "{{input.callback_required}}"
      },
      "input_schema": {
        "type": "object",
        "required": [
          "record_id"
        ],
        "properties": {
          "record_id": "CRM record identifier to update.",
          "status": "Ticket status such as open, pending, resolved.",
          "assigned_to": "Agent or team taking ownership.",
          "priority": "Updated priority level: low, medium, high.",
          "notes": "Additions or changes gathered in conversation.",
          "callback_required": "yes or no depending on whether a callback is needed."
        },
        "example": {
          "record_id": "REC-458291",
          "status": "pending",
          "assigned_to": "Ayla Automation Team",
          "priority": "medium",
          "notes": "Customer awaiting confirmation email.",
          "callback_required": "yes"
        }
      },
      "response": {
        "updated_record": "$.data"
      },
      "timeout": 15000,
      "model": "base",
      "language": "en-US",
      "wait_for_greeting": "false",
      "temperature": "0.5",
      "interruption_threshold": 100,
      "timezone": "America/Los_Angeles",
      "max_duration": "30",
      "noise_cancellation": "false",
      "block_interruptions": "false",
      "record": "false",
      "keywords": [
        "update ticket",
        "modify record",
        "change status"
      ],
      "ignore_button_press": "false"
    },
    {
      "name": "Close CRM Record",
      "description": "Mark a CRM record as resolved and capture a closing summary once the caller confirms the issue is handled.",
      "speech": "I will close out that request now.",
      "url": "https://crm.example.com/api/v1/records/{{input.record_id}}/close",
      "method": "POST",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {{crm_api_token}}"
      },
      "body": {
        "resolution_summary": "{{input.resolution_summary}}",
        "closed_by": "{{input.closed_by}}",
        "satisfaction_rating": "{{input.satisfaction_rating}}"
      },
      "input_schema": {
        "type": "object",
        "required": [
          "record_id",
          "resolution_summary"
        ],
        "properties": {
          "record_id": "CRM record identifier to close.",
          "resolution_summary": "Two to three sentences describing the final resolution.",
          "closed_by": "Agent name signing off the resolution.",
          "satisfaction_rating": "Optional 1-5 rating if the caller provided it."
        },
        "example": {
          "record_id": "REC-458291",
          "resolution_summary": "Rebooked onto TK234 for tonight; confirmation email sent.",
          "closed_by": "Ayla",
          "satisfaction_rating": "5"
        }
      },
      "response": {
        "record_id": "$.data.id",
        "closed_at": "$.data.closed_at"
      },
      "timeout": 15000,
      "model": "base",
      "language": "en-US",
      "wait_for_greeting": "false",
      "temperature": "0.4",
      "interruption_threshold": 100,
      "timezone": "America/Los_Angeles",
      "max_duration": "30",
      "noise_cancellation": "false",
      "block_interruptions": "false",
      "record": "false",
      "keywords": [
        "close ticket",
        "resolve case",
        "finish record"
      ],
      "ignore_button_press": "false"
    }
  ]
}
